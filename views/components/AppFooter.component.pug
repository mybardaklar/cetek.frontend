mixin SectionReferences
	section(class="bg-neutral-100 py-8")
		div(class="px-10")
			div(id="SectionReferencesSlider", class="keen-slider items-center")
				each sliderItem in settings.config.website_settings.references
					div(class="keen-slider__slide")
						div(class="flex justify-center items-center text-center")
							img(
								src=sliderItem.image.sizes['medium'],
								alt="alt",
								width=sliderItem.image.sizes['medium-width'],
								class="max-w-full"
							)

mixin AppFooter
	div(
		class="transition duration-300",
		x-bind:class="{ 'ease-in -translate-x-[300px]': $store.navigationDrawer.on, 'ease-out': !$store.navigationDrawer.on }"
	)
		+SectionReferences
		footer
			div(class="bg-slate-900 py-12")
				div(class="container")
					div(class="grid grid-cols-1 items-center gap-4 sm:gap-8 lg:gap-4 lg:grid-cols-12")
						div(class="lg:col-span-8")
							div(class="flex flex-col flex-wrap items-center gap-4 p-4 divide-white divide-opacity-10 sm:flex-row sm:divide-x sm:p-0")
								div(class="sm:pr-8 sm:w-4/12 md:w-3/12")
									a(
										href="/",
										class="flex max-w-56"
									)
										img(
											src=settings.config.website_settings.footer_logo.sizes['medium'],
											alt="alt"
										)

								div(class="flex-grow sm:pl-8 sm:w-4/12 md:w-3/12")
									div(class="flex items-center text-center sm:text-left")
										p(class="text-white text-opacity-80")= settings.config.website_settings.footer_description

						div(class="lg:col-span-4")
							div(class="flex flex-wrap items-center justify-center gap-2 lg:justify-end")
								each value, key in settings.config.website_settings.social_media
									a(
										href=value,
										target="_blank",
										class="w-10 h-10 inline-flex items-center justify-center bg-slate-700 rounded-full text-white transition hover:bg-cetek-600"
									)
